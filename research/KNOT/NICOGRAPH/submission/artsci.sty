%%% Rayout

\usepackage[top=30.0truemm,bottom=37.0truemm,left=20.0truemm,right=20.0truemm]{geometry}

\newif\ifJOURNAL
\newif\ifJAPANESE

\newlength{\headtitlesep}
\newlength{\jtitlejnamesep}
\newlength{\jnamejaffsep}
\newlength{\jaffetitlesep}
\newlength{\etitleenamesep}
\newlength{\enameeaffsep}
\newlength{\eaffemailsep}
\newlength{\emailabstsep}
\newlength{\jabsteabstsep}
\newlength{\abstmainsep}

%%% Page & Header Style

\usepackage{fancyhdr}
\usepackage{lastpage}

\fancypagestyle{aspagestyle}{
	\lhead{}
	\rhead{}
	\chead{\asheader}
	\cfoot{\aspagenum}
	\renewcommand{\headrulewidth}{0.0pt}
}

%%% Macro for Title

\makeatletter
\def\jtitle#1{\long\def\@jtitle{#1}}
\def\@jtitle{}
\def\jauthor#1{\long\def\@jauthor{#1}}
\def\@jauthor{}
\def\jaffiliation#1{\long\def\@jaffiliation{#1}}
\def\@jaffiliation{}
\def\etitle#1{\long\def\@etitle{#1}}
\def\@etitle{}
\def\eauthor#1{\long\def\@eauthor{#1}}
\def\@eauthor{}
\def\eaffiliation#1{\long\def\@eaffiliation{#1}}
\def\@eaffiliation{}
\def\email#1{\long\def\@email{#1}}
\def\@email{}
\def\jabstract#1{\long\def\@jabstract{#1}}
\def\@jabstract{}
\def\eabstract#1{\long\def\@eabstract{#1}}
\def\@eabstract{}
\def\@maketitle{
\ifJAPANESE	% for Japanese
	\vspace*{\headtitlesep}
	{\Large \begin{center}\textbf{\@jtitle}\end{center}}
	\vspace{\jtitlejnamesep}
	{\Large \begin{center}\@jauthor\end{center}}
	\vspace{\jnamejaffsep}
	{\large \begin{center}\@jaffiliation\end{center}}
	\vspace{\jaffetitlesep}
	{\Large \begin{center}\textbf{\@etitle}\end{center}}
	\vspace{\etitleenamesep}
	{\Large \begin{center}\textbf{\@eauthor}\end{center}}
	\vspace{\enameeaffsep}
	{\large \begin{center}\@eaffiliation\end{center}}
	\vspace{\eaffemailsep}
	\begin{center}\texttt{\@email}\end{center}
	\vspace{\emailabstsep} \mbox{} \\
	{\small \textbf{概要}\\ \@jabstract}
	\ifJOURNAL
		\vspace{\jabsteabstsep} ~ \\
		{\small \textbf{Abstract}\\ \@eabstract}
	\else
		\vspace{\abstmainsep}
	\fi
\else	% for English
	\vspace*{\headtitlesep}
	{\Large \begin{center}\textbf{\@etitle}\end{center}}
	\vspace{\etitleenamesep}
	{\Large \begin{center}\textbf{\@eauthor}\end{center}}
	\vspace{\enameeaffsep}
	{\large \begin{center}\@eaffiliation\end{center}}
	\vspace{\eaffemailsep}
	\begin{center}\texttt{\@email}\end{center}
	\vspace{\emailabstsep} \mbox{} \\
	{\small \textbf{Abstract}\\ \@eabstract}
	\ifJOURNAL
		\relax
	\else
		\vspace{\abstmainsep}
	\fi
\fi
}
\makeatother
